<% flash.each do |message_type, message| %>
  <%= content_tag :div, class: "alert alert-#{message_type} alert-dismissible fade show" do %>
    <span><%= safe_join message.split("\n"), "<br>".html_safe %></span>
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  <% end %>
<% end %>
